extend layout
block content
  script(type="text/javascript", src="js/chat.js")
  script(src='/socket.io/socket.io.js')
  .h3 Welcome to a sample chat application.
  #chatEntries
  .row#entries
    .col-lg-12
      input(type='text')#messageInput
      .btn-group
        button.btn#submit(data-loading-text="Send") Send
        button.btn.dropdown-toggle(data-toggle="dropdown")
          span.caret
        ul.dropdown-menu
          li
            a#edit(href="#modalPseudo", data-toggle="modal")
              i.icon-user
              | Change name
          li
            a#info(href="#modalInfos", data-toggle="modal")
              i.icon-info-sign
              | Infos
  #nbUsersDiv
    p There is 
      span#nbUsers
        |  connected user(s).

      .modal.fade#modalPseudo
        .modal-header
          h3 Choose a name
        .modal-body
          p Choose a name :
          input(type='text')#pseudoInput
          .alert.alert-error#alertPseudo
            | This name is already used ! Choose another one.
        .modal-footer
          button.btn.btn-primary#pseudoSubmit Go to the chat
  #chat-content
  .controls
    input.field#field(style='width:350px;')
    input.send#send(type='button', value='send')
    br
    br
block sidebar
  .widget
    h4
     | Members