  @import 'nib'
  @import url('http://fonts.googleapis.com/css?family=Quicksand')

global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #fa5b4d
background-color = #faf9f0

h1,h2,h3,h4,h5
  font-family 'Quicksand'
body
  font-family 'Georgia'
  background-color background-color
  color #444

header
  font-family 'Quicksand'
  padding 34px 10px
  color #fff
  font-size 25px
  text-align center

  /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
  background-color main-color
  text-shadow 0px -1px 0px darken(main-color, 30%)
  border-bottom 1px solid darken(main-color, 30%)

.container
  width 1200px
  margin 50px auto
  overflow hidden

.main-content
  float left
  width 75%

  p
    margin-bottom 20px

.sidebar
  float left
  width 25%

  .widget

    /*
     * Note the lack of vendor
     * prefixes here. Nib will
     * add them for us
     */
    padding 5px
    border-radius 3px
    border 1px solid #ccc
    margin-left 20px
    background-color background-color
    box-shadow inset 0px 0px 0px 3px rgba(#fff, 0.8), 0px 3px 0px -2px rgba(#000, 0.1)

    h1
      font-family 'Quicksand'
      margin 13px 10px 4px
      padding-bottom 10px
      border-bottom 1px dotted #ddd
      border-radius 2px 2px 0px 0px
      margin-bottom 10px

    p
      font-size 13px
      padding 0px 10px
      margin-bottom 10px

p
  line-height 1.8

footer
  width 500px
  margin 50px auto
  border-top 1px dotted #ccc
  padding-top 5px
  font-size 13px

// Chat Content
#chatContent
  font-family 'Quicksand'
  border 1px solid #ccc
  height 300px
  radius 5px
  overflow auto
  padding 5px
  background-color darken(main-color,50%)
  color #FFFFFF
  text-shadow: 1px 1px 2px #000

// Navigation
ul#nav
  list-style: none !important
  margin 0
  padding 0
  background-color main-color

  li
    float left
    list-style-type: none

    a
      transition: color .5s, border-left .5s;
      text-decoration none
      display block
      padding 1px 5px
      margin-right 15px
      background-color main-color
      color #FFFFFF
      text-shadow: 1px 1px 2px #000
      font-family 'Quicksand'
      border-left background-color 5px solid

    :hover 
        color #333
        border-left darken(background-color, 30%) 5px solid



.clearfix
  clear both
.left
  float left
.right 
  float right