main-color = #fa5b4d
background-color = #faf9f0

// Navigation

ul.nav
  &:after
    z-index -1
    width 150%
    height 100%
    position absolute
    top -45%
    left -25%
    display block
    content ""
    background rgba(255,255,255,0.1)
    border-radius 100%
  li
    transition  color .5s, border-left .5s
    border-left background-color 5px solid
    &:hover 
      border-left lighten(main-color, 50%) 5px solid
      color #FFFFFF
    a
      padding-right 25px
      color #FFFFFF
      text-shadow 1px 1px 2px #000
      // font-family 'Quicksand'

 //Override hover effect 
.navbar-inverse .navbar-nav>.active>a
  background-color main-color
  &:hover 
    background-color main-color



// Chat Controls
#chatWrap
  background #444
  padding 10px
  border 1px solid #000
  box-shadow inset 0 0 2px #FFF
  border-radius 8px
  h4 
    color:white; padding-top:1px; padding-bottom:10px

#chatEntries
  border 1px solid grey
  border-radius 5px
  background-color #FAFAFA
  margin-bottom 20px
  min-height 300px
  max-height 300px
  box-shadow  0 0 10px rgba(0,0,0,.5)
  overflow  auto

#messages
  padding 0 12px
  color  black
  // background #ababab /* Old browsers */
  width  100%
  // -webkit-animation-name flip
  // -webkit-animation-duration 500ms
  border-bottom 0
  padding 7px

#messageInput
  min-width 65%
  max-width 80%
  height 45px


@-webkit-keyframes flip {
        0% {
                -webkit-transform: rotateX( 90deg )
        }
        100% {
                -webkit-transform: rotateX( 0deg )
        }
}

